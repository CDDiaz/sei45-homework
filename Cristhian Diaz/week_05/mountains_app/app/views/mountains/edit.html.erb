<h2>Edit Mountain</h2>

<form action="<%= mountain_path(@mountain.id) %>" method="post">

<label>
  Name:
  <input name="name" required value="<%= @mountain.name %>">
</label>

<label>
  Range:
  <input name="range" value="<%= @mountain.range %>">
</label>

<label>
  Location:
  <input name="location" value="<%= @mountain.location %>">
</label>

<label>
  Prominence:
  <input type="number" name="prominence" value="<%= @mountain.prominence %>">
</label>

<label>
  Image:
  <input type="url" name="image" value="<%= @mountain.image %>">
</label>

<button>Update Mountain</button>

</form>
