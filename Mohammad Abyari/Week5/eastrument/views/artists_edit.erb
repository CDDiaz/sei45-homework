<h1> Edit Artist </h1>

<form action="/artists/<%= @artist["id"]%>" method= "post">

  <label>
    Name:
    <input name="name" type="text" placeholder="Kayhan Kalhor" value="<%= @artist["name"]%>">
  </label>
  <label>
    Instrument:
    <input name="instrument"type="text" placeholder="Setar" value=" <%= @artist["instrument"]%> ">
  </label>
  <label>
    Country:
    <input name="country"type="text" placeholder="Iran" value=" <%= @artist["country"]%> ">
  </label>
  <label>
    Image:
    <input name="image" type="url" placeholder="http://...." value=" <%= @artist["image"]%> ">
  </label>

<button> Update </button>
</form>
